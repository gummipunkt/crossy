# Rails
RAILS_ENV=production
RACK_ENV=production
SECRET_KEY_BASE=change-me-to-a-long-random-hex

# Public base URL (used for OAuth redirects, mailer links, and public asset URLs)
# Example: https://crossy.example.com
PUBLIC_BASE_URL=https://your-domain.tld

# Database (PostgreSQL)
# Example if using the compose service `db`:
DATABASE_URL=postgres://postgres:postgres@db:5432/server_production

# Lockbox / BlindIndex
LOCKBOX_MASTER_KEY=change-me-32-bytes-hex-or-base64
# IMPORTANT: Blind index key MUST be 64 hex characters; keep it quoted so YAML/env parsers don't mangle it
BLIND_INDEX_MASTER_KEY="0123456789abcdef0123456789abcdef0123456789abcdef0123456789abcdef"

# Threads API (global app credentials for OAuth)
THREADS_APP_ID=
THREADS_APP_SECRET=
# Optional, improves token exchange in some setups
THREADS_CLIENT_TOKEN=

# SMTP (outgoing mail for password reset)
SMTP_ADDRESS=smtp.example.com
SMTP_PORT=587
SMTP_DOMAIN=example.com
SMTP_USERNAME=
SMTP_PASSWORD=
# login|plain|cram_md5
SMTP_AUTH=login
SMTP_STARTTLS=true
# Optional: none|peer|client_once|fail_if_no_peer_cert
# SMTP_OPENSSL_VERIFY_MODE=

# Mailer sender address (From:)
MAILER_SENDER=crossy@example.com

# (Optional) Redis, only if you wire it up
# REDIS_URL=redis://redis:6379/0

# (Optional) Nostr server-side signing (future)
# NOSTR_NSEC=
# NOSTR_SK_HEX=