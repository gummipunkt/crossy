<h1 class="text-xl font-semibold mb-4">Users</h1>

<div class="grid grid-cols-1 md:grid-cols-2 gap-4">
  <% @users.each do |u| %>
    <div class="rounded-md border bg-white p-5 shadow-sm">
      <div class="flex items-start justify-between gap-3">
        <div>
          <div class="text-sm font-medium">
            <%= link_to u.email, admin_user_path(u), class: "text-blue-600 hover:underline break-all" %>
          </div>
          <div class="text-xs text-gray-600 mt-1 flex items-center gap-3">
            <span>Networks: <%= u.read_attribute(:networks_count) %></span>
            <span class="hidden sm:inline">|</span>
            <span>Role: <%= u.admin? ? "Admin" : "User" %></span>
          </div>
        </div>
        <div class="text-right space-x-2 shrink-0">
          <% unless u.admin? %>
            <%= button_to "Make admin", make_admin_admin_user_path(u), method: :post, class: "text-xs text-purple-700 hover:underline" %>
          <% end %>
          <% if u != current_user %>
            <%= button_to "Delete", admin_user_path(u), method: :delete, data: { confirm: "Delete this user?" }, class: "text-xs text-red-700 hover:underline" %>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
</div>


